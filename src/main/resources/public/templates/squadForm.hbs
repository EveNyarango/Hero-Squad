{{#partial "title"}}
Hello! Let's create a Squad!
{{/partial}}



{{#partial "content"}}
<body>
    <form action="/success"   method="post">
        <div class="form-group">
            <label for="size">Enter the size of the squad</label>
            <input id="size" name="size" class="form-control" type="number" required>
        </div>
        <div class="form-group">
            <label for="name">Enter the name of the squad</label>
            <input id="name" name="name" class="form-control" type="text" required>
        </div>
        <div class="form-group">
            <label for="cause">Enter the cause of the squad</label>
            <input id="cause" name="cause" class="form-control" type="text" required>
        </div>
        <button type="button" class="btn btn-success">Submit</button>
    </form>
</body>
{{/partial}}

